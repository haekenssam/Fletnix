<Window x:Class="Fletnix.View.CreateUserprofileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fletnix.View"
        mc:Ignorable="d"
        DataContext="{Binding CreateUserprofile, Source={StaticResource Locator}}"
        Title="CreateUserprofileWindow" Height="200" Width="200">
    <StackPanel>
        <TextBlock Margin="16,16,16,0" Text="Naam:"/>
        <TextBox Margin="16,0,16,8" Text="{Binding NewUserprofile.ProfileName, Mode=TwoWay}"/>
        <TextBlock Margin="16,8,16,0" Text="Leeftijd:"/>
        <TextBox Margin="16,0,16,8" Text="{Binding NewUserprofile.Age, Mode=TwoWay}"/>
        <Button x:Name="ButtonSaveUserprofile"
                Width="80"
                Margin="16,16,0,0"
                Command="{Binding AddUserprofileCOmmand, Mode=OneTime}"
                Content="Save" Click="ButtonSaveUserprofile_Click"/>
    </StackPanel>
</Window>
